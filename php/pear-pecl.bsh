#   #   p e a r - p e c l . b s h    #
#   #                                #
#   ##################################

#   2020-01-01   - extracted from  php.bsh (?)

pear version ;

for peclName in \
      raphf     \
      propro    \

do
    echo "Installing ${peclName}!"  ;
    pecl install  ${peclName}       ;
    cat   <<END >> /etc/php.ini     ;
extension=${peclName}
END

done

exit 1;
