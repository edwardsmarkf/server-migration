                           ImageMagick-devel        \
                           ImageMagick-c++          \
                           ImageMagick-c++-devel    \
                           ImageMagick-doc          \
                           ImageMagick-perl         \
                           ;
                           
dnf --assumeyes   install  php-pear                \
                           make                    \
                           ;

