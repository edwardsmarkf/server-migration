LATEST_VERSION=25;  ## added 2025-10-31

curl --silent --location https://rpm.nodesource.com/setup_${LATEST_VERSION}.x | bash - ;
dnf --assumeyes install nodejs ;

which node;
/bin/node --version  ;

which npm.;
/bin/npm  --version   ;


exit ;




# Download and install nvm:
/usr/bin/curl --output  - https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.3/install.sh | bash  ;

##  If you use -o - (a hyphen after the -o), it explicitly forces curl to output to stdout, which is the default behavior. 
##  This can be useful for clarity or in specific scripting scenarios where you want to ensure output to stdout even if 
##  other options might otherwise suppress it.


# in lieu of restarting the shell
\. "$HOME/.nvm/nvm.sh"

# Download and install Node.js:
nvm install ${LATEST_VERSION}  ;

# Verify the Node.js version:
node -v # Should print "v25.1.0".

# Verify npm version:
npm -v # Should print "11.6.2".





exit ;




