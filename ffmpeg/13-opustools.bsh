export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig/  ;
export LIBPATH=/usr/local/lib/   ;
export LD_LIBRARY_PATH=/usr/local/lib/  ;

cd   ~/INSTALL_FFmpeg/INSTALL_opustool/  ;

gzip --decompress   --verbose  ./opus*.gz    ;
tar -xvf   ./opus*.tar   ; 
exit;
###  gotta change:
####  sed  __opus_check_int  to   opus_check_int  (without two leading underscores)   /usr/local/include/opus/opusenc.h

#####   2025-12-30 - temporary (!) workaround
sed --in-place                                                                                                         \
    --expression='s/, __opus_check_int_ptr(x)/, opus_check_int_ptr(x)/; s/, __opus_check_int(x)/, opus_check_int(x)/;' \
    /usr/local/include/opus/opusenc.h   ;

cd          ./opus*/       ;
./configure ;

make     &&     make check   ;  make install ;

ls -l  /usr/local/bin/opusenc  ;  2025-12-30
ls -l  /usr/local/bin/opusdec  ;  2025-12-30

/usr/local/bin/opusenc  --version ;  ## 2015-05-07

/usr/local/bin/opusdec  --version ;  ## 2015-05-07

curl  https://people.xiph.org/~giles/2012/opus/detodos.opus > detodos.opus ;   

##  opus example
/usr/local/bin/opusdec  ~/INSTALL_FFmpeg/test/detodos.opus   ~/INSTALL_FFmpeg/test/detodos.wav ;
