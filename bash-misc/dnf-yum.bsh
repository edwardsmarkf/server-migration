## 2025-07-29   - added  "--disableplugin subscription-manager"  to get around the error message


dnf --disableplugin subscription-manager     clean all ;  ## 2016-12-31 - required for MariaDB

dnf   --assumeyes  --disableplugin subscription-manager    update              ;
dnf   --assumeyes  --disableplugin subscription-manager    install  yum-utils  ;    ## 2013-05-15
dnf   --assumeyes  --disableplugin subscription-manager    install  dnf-utils  ;    ## 2020-01-08
dnf   --assumeyes  --disableplugin subscription-manager    install  epel-release ;  ## 2020-01-18
dnf   --assumeyes  --disableplugin subscription-manager    install  iptables-services   net-tools  ;   ## 2015-07-01

dnf --disableplugin subscription-manager    clean all   ;    ## 2013-05-15

###########################/usr/sbin/yum-complete-transaction --cleanup-only   ;    ## 2013-05-15

dnf config-manager  --disableplugin subscription-manager   --set-enabled PowerTools ;  ## 2020-01-08



for installName in    \
     ant              \
     automake         \
     autoconf         \
     bc               \
     bind-utils       \
     bzip2-devel      \
     expat-devel      \
     expect           \
     file             \
     freetype-devel   \
     ftp              \
     gcc              \
     gcc-c++          \
     gd               \
     gd-devel         \
     git              \
     httpd            \
     kernel-devel     \
     libgcc           \
     libjpeg-devel    \
     libpng-devel     \
     libtiff-devel    \
     libtool          \
     lsof             \
     make             \
     openssl          \
     openssl-devel    \
     popt.i686        \
     python3          \
     sendmail         \
     sendmail-cf      \
     s-nail           \
     sshpass          \
     vim              \
     wget             \
     xz               \
     zlib-devel       \
     
do
    echo '####################################';
    echo "Now installing ${installName} !!" ;
    echo '####################################';
    dnf  --assumeyes  --disableplugin subscription-manager  install ${installName} ;
done;

###dnf  --assumeyes  install    logcheck

    ##  2019-12-11 https://linuxconfig.org/how-to-install-postfix-on-redhat-8
dnf --assumeyes  install postfix mailx  ; ## 2019-12-11
systemctl enable postfix                ; ## 2019-12-11
systemctl start postfix                 ; ## 2019-12-11

 dnf --assumeyes groupinstall 'Development Tools'  ; ## 2021-06-30

exit 1 ;    ## DONT GO ANY FARTHER IN THIS SCRIPT!




